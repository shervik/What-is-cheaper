<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom Shadow -->
    <item>
        <shape  android:shape="rectangle">
            <solid android:color="@color/resultShadow" />
            <corners android:radius="@dimen/cornerRadius" />

        </shape>
    </item>

    <item android:bottom="@dimen/result_shadowBottom">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/resultBad_light"
                android:endColor="@color/resultBad"
                android:angle="270"/>
            <corners
                android:bottomRightRadius="@dimen/cornerRadius"
                android:bottomLeftRadius="@dimen/cornerRadius"/>

        </shape>
    </item>
</layer-list>